<h1>It's (sort of) a Dictionary!</h1>
#if($newWord)
  <h3>$newWord.getWord() successfully added!</h3>
#end
#if($words.size() > 0)
<ul>
  #foreach($word in $words)
    <li><a href="/word/$word.getId()">$word.getWord()</a>
      <ul>$word.getDefinitions().size() Definition(s)</ul>
    </li>
  #end
</ul>
#else
<h3>No Words Yet!</h3>
#end
<a href="/word/new">Add New Word</a>
